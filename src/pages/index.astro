---
import LatestPosts from '../components/LatestPosts.astro';
import Link from '../components/Link.astro';
import SkillCard from '../components/SkillCard.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<h1>About Me</h1>

  <p>
    Hi, I'm Nicholis du Toit, known online as TrueWinter. I'm a full-stack software and
    website developer based in South Africa. I also occasionally find and responsibly
    disclose security vulnerabilities.
  </p>

  <h2>Skills</h2>

  <div class="row g-4 mb-3">
    <SkillCard
      category="Website Development"
      skills={[
        'HTML',
        'CSS',
        'JavaScript/TypeScript',
        'SEO',
        'Responsive Design',
        'Bootstrap',
        'React',
        'Astro'
      ]} />

    <SkillCard
      category="Programming"
      skills={[
        'Node.js',
        'Java',
        'Go',
        'PHP',
        'Electron',
        'Wails'
      ]} />

    <SkillCard
      category="System Administration"
      skills={[
        'Ubuntu/Debian',
        'Authoritative DNS (BIND, AXFR, OctoDNS)',
        'Recursive DNS (Unbound, BIND)',
        'Managing server hardware',
        'Proxmox',
        'CI/CD',
        'Grafana',
        'Prometheus'
      ]} />

    <SkillCard
      category="Databases"
      skills={[
        'MySQL',
        'SQLite',
        'Redis',
        'MongoDB'
      ]} />

    <SkillCard
      category="Tools"
      skills={[
        'Git',
        'Webpack',
        'Docker',
        'UptimeRobot',
        'Sentry'
      ]} />

    <SkillCard
      category="Networking"
      skills={[
        'Mikrotik',
        'pfSense',
        'IPv6',
        'WireGuard',
        'BGP'
      ]} />
  </div>

  <Link url="/cv_redacted.pdf" class="btn btn-primary" event="skills-cv">Download my CV*</Link>
  <small class="text-body-secondary d-block mt-1">
    * <a href="/contact/">Contact me</a> if you'd like the unredacted version.
  </small>

  <h2 class="mt-3">Latest Posts</h2>
  <LatestPosts />
</Layout>
